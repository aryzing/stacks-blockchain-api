{
  "name": "@stacks/stacks-blockchain-api-types",
  "version": "0.1.0",
  "access": "public",
  "description": "TypeScript descriptions of Stacks 2.0 blockchain API entities",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "rimraf .tmp && run-s generate:git-info generate:openapi generate:docs generate:postman",
    "test": "echo 'ok'",
    "generate:git-info": "npm run generate:git-info --prefix ..",
    "generate:openapi": "npm run generate:openapi --prefix ..",
    "generate:docs": "redocly build-docs openapi.yaml --output .tmp/index.html",
    "generate:postman": "openapi2postmanv2 --spec openapi.yaml --output .tmp/collection.json --options folderStrategy=Tags,requestParametersResolution=Example,exampleParametersResolution=Example,schemaFaker=false 2>/dev/null",
    "deploy:docs": "npm run build && gulp deployDocs"
  },
  "author": "@hirosystems",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/hirosystems/stacks-blockchain-api.git",
    "directory": "docs"
  },
  "files": [
    "openapi.yaml",
    "index.d.ts",
    "generated.d.ts",
    "socket-io/**/*",
    "api/**/*",
    "entities/**/*"
  ],
  "devDependencies": {
    "@redocly/cli": "1.19.0",
    "@types/node": "^18.13.0",
    "del": "5.1.0",
    "gulp": "4.0.2",
    "gulp-gh-pages": "0.6.0-6",
    "npm-run-all": "4.1.5",
    "openapi-to-postmanv2": "2.13.0",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  }
}
